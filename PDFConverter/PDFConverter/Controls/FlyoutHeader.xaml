<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PdfConverter.Controls.FlyoutHeader">
    <Border WidthRequest="100"
            HeightRequest="100"
            Stroke="{AppThemeBinding Light=Black,Dark=Black}"
            StrokeThickness="4"
            BackgroundColor="{AppThemeBinding Light=White, Dark=White}"
            StrokeShape="RoundRectangle 100">


        <ImageButton Clicked="UploadImage_Clicked" x:Name="Image_Upload" BackgroundColor="Transparent" HeightRequest="90" WidthRequest="160"  Padding="0" Source="https://cdn4.iconfinder.com/data/icons/glyphs/24/icons_user-512.png">
        </ImageButton>
    </Border>



    <Label Text="Welcome back," FontSize="32" FontAttributes="Bold" Margin="10,10,0,0" HorizontalOptions="Center"/>
    <Label x:Name="Usernamelbl" FontSize="32" FontAttributes="Bold" Margin="20,-10,0,0" HorizontalOptions="Center"/>
</StackLayout>

